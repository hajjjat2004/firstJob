pipeline {
    
    agent any
  
    stages {
        stage('Checkout Source') {
            steps {
                
               git branch: 'main', credentialsId: 'tokenjenkins', url: 'https://github.com/hajjjat2004/firstjob'
            }
         }
         
          stage('docker compose clean') {
            
            steps{
                
                script {
                 
                   sh """ssh -tt node@192.168.32.134 << EOF
                   sh 'cd /home/nod/dd'
                   sh 'git clone https://github.com/hajjjat2004/firstjob /home/node/dd'
                   
                   sh 'docker-compose up -d'
                   EOF"""
                    
                }
            }
          }
         
    }
}
    
    
